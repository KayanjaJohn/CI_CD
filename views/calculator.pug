doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/style.css')
    script(async='', src='https://www.googletagmanager.com/gtag/js?id=G-Q3E3XZ7RL7')
    title Calculator
  body
    h1.form-title(style='color: teal') SIMPLE CALCULATOR
    .container
      .mb-3.screen #{result}
      form#signup.form(action="" name="calculate" method='post' onsubmit="return validate()")
        #field.mb-3
          label.form-label(for='num1')
            strong Enter First Number:
          input#num1.form-control(type='number', name='num1')
          small#num1err
        #field.mb-3
          label.form-label(for='num2')
            strong Enter Second Number:
          input#num2.form-control(type='number', name='num2')
          small#num2err
        #field.mb-3
          label.form-label(for='operand')
            strong Operator(+,  -,  /,  *)
          input#operand.form-control(type='text', name='operator')
          small#operatorerr
        button.btn.btn-secondary(type='submit')
          strong Equal
    script(src='/js/validation.js')